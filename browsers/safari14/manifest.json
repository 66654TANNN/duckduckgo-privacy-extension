{
  "name": "DuckDuckGo Privacy Essentials for Safari",
  "version": "2021.8.4",
  "description": "DDG Privacy essentials Safari migration investigation",
  "icons": {
    "16": "img/safari14/icon_16.png",
    "48": "img/safari14/icon_48.png",
    "128": "img/safari14/icon_128.png",
    "256": "img/safari14/icon_256.png",
    "512": "img/safari14/icon_512.png",
    "1024": "img/safari14/icon_1024.png"
  },
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "img/icon_48.png",
    "default_popup": "html/popup.html"
  },
  "omnibox": {
    "keyword": "ddg"
  },
  "options_page": "html/options.html",
  "background": {
    "scripts": [
      "public/js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "match_about_blank": true,
      "all_frames": true,
      "css": [
        "public/css/noatb.css"
      ],
      "js": [
        "public/js/inject.js"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "public/js/content-scripts/autofill.js"
      ],
      "css": [
        "public/css/autofill-host-styles.css"
      ],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "declarative_net_request": {
    "rule_resources" : ["./data/tracker_lists/rules.json"]
  },
  "permissions": [
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "*://*/*",
    "webNavigation",
    "omnibox",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "web_accessible_resources/*",
    "img/logo-small.svg",
    "public/css/autofill.css",
    "public/font/*"
  ]
}
