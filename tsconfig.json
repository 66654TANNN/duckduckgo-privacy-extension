{
  "compilerOptions": {
    "target": "es2021",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true
  },
  "include": [
      "shared/js/background/**/*.js",
      "shared/js/devtools/**/*.js",
      "shared/js/shared-utils/**/*.js"
  ]
}
